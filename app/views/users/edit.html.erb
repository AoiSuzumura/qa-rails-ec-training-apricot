<% provide(:title, "ユーザー情報修正") %>
<body>
  <main>
    <%= render 'shared/error_messages', object: @user %>
    <h2 class="text-center mt-5">ユーザ情報修正</h2>
    <%= form_with(model: @user, local: true) do |f| %>
      <table width="50%" style="margin-left:350px">
        <tr height="40">
          <td align="center">
            氏名<span style="float: right">姓</span>
          </td>
          <td>
            <%= f.text_field :last_name, style: "margin-left:10px", maxlength: 10, required: true %>
            <span style="margin-right:35px"></span>名
            <%= f.text_field :first_name, style: "margin-left:10px", maxlength: 10, required: true %>
          </td>
        </tr>

        <tr height="40">
          <td align="center">
            住所<span style="float: right">〒</span>
          </td>
          <td colspan="2">
            <%= f.text_field :zipcode, style: "margin-left:10px", size: 25, pattern: '\d{3}-?\d{4}', required: true %>
          </td>
        </tr>

        <tr height="40">
          <td align="right">
            都道府県
          </td>
          <td colspan="2">
          <%= f.text_field :prefecture, style: "margin-left:10px", size: 50, maxlength: 5, required: true %>
          </td>
        </tr>

        <tr height="40">
          <td align="right">
            市町村区
          </td>
          <td colspan="2">
            <%= f.text_field :municipality, style: "margin-left:10px", size: 50, maxlength: 10, required: true %>
          </td>
        </tr>

        <tr height="40">
          <td align="right">
            番地
          </td>
          <td colspan="2">
            <%= f.text_field :address, style: "margin-left:10px", size: 50, maxlength: 15, required: true %>
          </td>
        </tr>

        <tr height="40">
          <td align="right">
            マンション<br>部屋番号</br>
          </td>
          <td colspan="2">
            <%= f.text_field :apartments, style: "margin-left:10px", size: 50, maxlength: 20, required: true %>
          </td>
        </tr>

        <tr height="40">
          <td align="center">
            メールアドレス
          </td>
          <td colspan="2">
            <%= f.email_field :email, style: "margin-left:10px", size: 65 %>
          </td>
        </tr>

        <tr height="40">
          <td align="center">
            電話番号
          </td>
          <td colspan="2">
            <%= f.text_field :phone_number, style: "margin-left:10px", size: 65, pattern: "(^[0-9]+$){1,15}", required: true %>
          </td>
        </tr>
      </table>

      <div class="row mt-5">
        <div class="col-5">
          <div class="d-flex justify-content-end">
            <%= f.submit "修正", class: "btn btn-primary" %>
          </div>
        </div>
        <div class="col-5 offset-2">
        <%= link_to "退会", @user, method: :delete,
            data: { confirm: "ユーザーデータが全て削除されます。本当に退会しますか？" }, class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </main>
</body>