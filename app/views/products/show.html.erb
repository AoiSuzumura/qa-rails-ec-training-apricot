<% provide(:title, "商品詳細") %>
<body>
  <main>
    <div class="container">
      <div class="mt-5 jumbotron bg-white">
        <% if @product.nil? %>
          <h1>該当商品が見つかりませんでした…</h1>
          <p class="mt-5">商品検索画面に戻り、やり直してください</p>
          <button type="button" class="btn btn-primary">商品検索画面へ</button>
        <% else %>
          <h1 class="text-center">商品情報</h1>
          <h2 class="text-center"><%= @product.product_name %></h2>
          <div class="offset-sm-3">
            <p class="offset-sm-6">商品カテゴリ：<%= @product.category.category_name %></p>
            <p><%= @product.description %></p>
            <p>探求学園限定商品！</p>
            <p class="mt-4 mb-5">価格：<%= @product.price %></p>
          </div>
          <%= form_with(url: add_cart_path(@product.id), local: true) do |f| %>
            <div class="row justify-content-center">
              <label for="order_quanity" class="mt-1 col-sm-1">購入個数</label>
              <div class="col-sm-1">
                <%= f.text_field :quantity, class: "form-control", id: "order_quanity", pattern: "[1-9][0-9]*", min: 1, required: true %>
              </div>
              <label class="mt-1 col-sm-1">個</label>
              <div class="col-sm-2">
                <%= f.submit "カートへ", class: "btn btn-primary btn-block" %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </main>
</body>
